<%- include('../partials/header') %>

    <table id="list">
        <thead>
            <tr>
                <th>Flights</th>
                <th>Flights<br>Info</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(f) { %>
                <tr>
                    <td>
                        <%= f.airline %>
                    </td>
                    <td>
                        <%= f.airport %>
                    </td>
                    <td>
                        <%= f.flightNo %>
                    </td>
                    <td>
                        <%= f.departsDate %>
                    </td>
                    <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
                </tr>
                <% }); %>
        </tbody>
    </table>

    <%- include('../partials/footer') %>