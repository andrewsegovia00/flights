<%- include('../partials/header') %>

    <form id="new-form" action="/flights" method="POST">
        <label>Airline:</label>
        <select name="airline">
            <option> ---Choose Airline--- </option>
            <option> American </option>
            <option> United </option>
            <option> Southwest </option>
        </select>
        <label>Airport:</label>
        <select name="airport">
            <option> ---Choose Aiport--- </option>
            <option> AUS </option>
            <option> DFW </option>
            <option> DEN </option>
            <option> LAX </option>
            <option> SAN </option>
        </select>
        <label>Flight No.</label>
        <input type="text" name="flightNo">
        <label>Departure Date</label>
        <input type="datetime-local" name="departsDate" min="2023-07-10" max="2032-12-31">
        <input type="submit" value="Add Flight">
    </form>

    <%- include('../partials/footer') %>